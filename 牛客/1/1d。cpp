#include <iostream>
using namespace std;

int main() {
    int T;  
    cin >> T;
    while (T--) {
        int n;  
        cin >> n;
        if (n % 2 != 0) {
            cout << "No" << endl;
            continue;
        }
        int a, b, countA = 0, countB = 0;
        bool is = 1;
        cin >> a;  
        countA = 1;
        for (int i = 1; i < n; i++) {
            int x;
            cin >> x;
            if (x == a) {
                countA++; 
            } else if (countB == 0) {
                b = x; 
                countB++;
            } else if (x == b) {
                countB++; 
            } else {
                is = 0; 
            }
        }
        if (is && countA == countB) {
            cout << "Yes" << endl;
        } else {
            cout << "No" << endl;
        }
    }
    return 0;
}